<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/zamanText"
        android:layout_width="213dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:text="Zaman: 15"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/skorText"
        android:layout_width="185dp"
        android:layout_height="59dp"
        android:layout_marginTop="12dp"
        android:text="Skor: 0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zamanText" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="322dp"
        android:layout_height="346dp"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skorText">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="skoruArttir"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/carrot" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="skoruArttir"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/carrot" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="skoruArttir"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/carrot" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="skoruArttir"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/carrot" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="skoruArttir"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/carrot" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="skoruArttir"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/carrot" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="skoruArttir"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/carrot" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="skoruArttir"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/carrot" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:onClick="skoruArttir"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/carrot" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>